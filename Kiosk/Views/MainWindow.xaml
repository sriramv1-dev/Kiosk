<Window x:Class="Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kiosk"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 80, 0, 0">
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="60">
            BooK KiosK
        </TextBlock>
        <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" FontStyle="Italic" Margin="0, 20, 0, 20">
            Welcome to Ramz book kiosk. Please click on 'Search' to continue.
        </TextBlock>
        <Button Content="Search For Books" Click="SearchForBooks_Clicked" Width="150" Height="30"/>
    </StackPanel>
</Window>
