<Window x:Class="Kiosk.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kiosk.Views" Background="White"
        xmlns:userControls="clr-namespace:Kiosk.Views.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1200" WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0, 20, 0, 40">
        
        <!--Title-->
        <userControls:TitleControl/>
        
        <!--Welcome Text-->
        <userControls:WelcomeTextControl/>

        <!--Search For Books Page-->
        <Button Content="Search For Books" Click="SearchForBooks_Clicked" Style="{StaticResource ButtonStyle}"
              FontSize="16"  Width="180" Height="40"  Margin="0, 120, 0, 20" />

    </StackPanel>
</Window>
